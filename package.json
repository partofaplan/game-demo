{
  "name": "tank-duel-web",
  "version": "1.0.0",
  "description": "Tank Duel - Web multiplayer tank battle game",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "tsx watch src/server/server.ts",
    "client:dev": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node dist/server.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "vite": "^5.0.8",
    "concurrently": "^8.2.2"
  },
  "keywords": ["game", "tank", "multiplayer", "web", "canvas"],
  "author": "Tank Duel Development Team",
  "license": "MIT"
}
{
  "name": "tank-duel-web",
  "version": "1.0.0",
  "description": "Tank Duel - Web multiplayer tank battle game",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "tsx watch src/server/server.ts",
    "client:dev": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node dist/server.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "concurrently": "^8.2.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite": "^7.1.7"
  },
  "keywords": [
    "game",
    "tank",
    "multiplayer",
    "web",
    "canvas"
  ],
  "author": "Tank Duel Development Team",
  "license": "MIT"
}

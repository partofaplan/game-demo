#!/usr/bin/make -f

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- -DCMAKE_BUILD_TYPE=Release

override_dh_auto_install:
	dh_auto_install
	# Install desktop file
	mkdir -p debian/tankduel/usr/share/applications
	cp tankduel.desktop debian/tankduel/usr/share/applications/
	# Install icon (if available)
	if [ -f tankduel.png ]; then \
		mkdir -p debian/tankduel/usr/share/pixmaps; \
		cp tankduel.png debian/tankduel/usr/share/pixmaps/; \
	fi